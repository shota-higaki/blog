---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import { SITE_TITLE } from '../consts';
import '../styles/global.css';

interface Props {
	title: string;
	description: string;
	ogImage?: string;
}

const { title, description, ogImage: customOgImage } = Astro.props;
const ogImage = customOgImage || new URL('/blog/og-image.svg', Astro.site).href;

// Critical CSS for above-the-fold content
const criticalCSS = `
:root {
	--font-body: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
	--font-mono: "Menlo", "Monaco", "Courier New", monospace;
	--black: 15, 18, 25;
	--gray: 96, 115, 159;
	--gray-light: 229, 233, 240;
	--gray-dark: 34, 41, 57;
	--accent: 117, 99, 240;
}
html {
	scroll-behavior: smooth;
}
body {
	min-height: 100vh;
	display: flex;
	flex-direction: column;
	margin: 0;
	font-family: var(--font-body);
	color: rgb(var(--gray-dark));
	background-color: #fff;
}
main {
	flex: 1;
}
`;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
<link rel="manifest" href={`${import.meta.env.BASE_URL}/site.webmanifest`} />
<meta name="theme-color" content="#7C3AED" />
<link rel="sitemap" href={`${import.meta.env.BASE_URL}/sitemap-index.xml`} />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Resource Hints -->
<link rel="dns-prefetch" href="https://www.googletagmanager.com" />
<link rel="preconnect" href="https://www.google-analytics.com" />

<!-- Performance optimizations -->
<meta http-equiv="x-dns-prefetch-control" content="on" />

<!-- Critical CSS inline -->
<style set:html={criticalCSS}></style>

<!-- Font preloads removed - fonts are not being used in CSS -->

<!-- Canonical URL -->
<link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:site_name" content={SITE_TITLE} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImage} />

