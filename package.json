{
	"name": "personal-blog",
	"type": "module",
	"version": "0.0.1",
	"engines": {
		"bun": ">=1.2.0"
	},
	"scripts": {
		"dev": "astro dev",
		"build": "rm -rf dist && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"check": "biome check --write",
		"check:ci": "biome check --error-on-warnings",
		"check:errors-only": "biome check",
		"format": "biome format --write",
		"format:check": "biome format",
		"lint": "biome lint --write",
		"typecheck": "astro check",
		"test": "bun run test:all",
		"test:all": "bun run test:unit && bun run test:e2e",
		"test:unit": "vitest run",
		"test:unit:ui": "vitest --ui",
		"test:unit:coverage": "vitest --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"ci": "bun scripts/ci.ts",
		"security:check": "bun run scripts/security-check.ts",
		"hooks:setup": "bun run scripts/setup-hooks.ts"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.6",
		"@astrojs/mdx": "^4.3.13",
		"@astrojs/rss": "^4.0.15",
		"@astrojs/sitemap": "^3.7.0",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"astro": "^5.16.15",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"unist-util-visit": "^5.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.12",
		"@playwright/test": "^1.58.0",
		"@testing-library/dom": "^10.4.1",
		"@types/bun": "^1.3.6",
		"@vitest/ui": "^3.2.4",
		"axe-playwright": "^2.2.2",
		"happy-dom": "^18.0.1",
		"vitest": "^3.2.4"
	}
}
